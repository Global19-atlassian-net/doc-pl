<refentry xmlns="http://docbook.org/ns/docbook" xml:id="function.ibase-num-fields">
 <refnamediv>
  <refname>ibase_num_fields</refname>
  <refpurpose>Zwraca liczbê pól w zbiorze wynikowym</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>int</type><methodname>ibase_num_fields</methodname>
   <methodparam><type>resource</type><parameter>id_wyniku</parameter></methodparam>
  </methodsynopsis>
  <para>
   Zwraca liczbê pól w zbiorze wynikowym.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>id_wyniku</parameter></term>
     <listitem>
      <para>
       Identyfikator zbioru wynikowego Firebird/Interbase.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Zwraca liczbê pól jako integer.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Przyk³ad <function>ibase_num_fields</function></title>
    <programlisting role="php">
<![CDATA[
<?php
$rs = ibase_query("SELECT * FROM tabela");
$coln = ibase_num_fields($rs);
for ($i = 0; $i < $coln; $i++) {
    $col_info = ibase_field_info($rs, $i);
    echo "nazwa: " . $col_info['name'] . "\n";
    echo "alias: " . $col_info['alias'] . "\n";
    echo "relacja: " . $col_info['relation'] . "\n";
    echo "d³ugo¶æ: " . $col_info['length'] . "\n";
    echo "typ: " . $col_info['type'] . "\n";
}
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>ibase_field_info</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

